<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.a67_textstyle.MainActivity">
    <!--设置字号为20pt，在文本框结尾处绘制图片-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我爱java"
        android:textSize="20pt"
        android:drawableRight="@drawable/avatar"/>
    <!--设置中间省略，所有字母大写-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="我爱java我爱java我爱java我爱java我爱java我爱java我爱java我爱java"
        android:ellipsize="middle"
        android:textAllCaps="true"/>
    <!--对右键和电话增加连接-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="邮件是 403621692@qq.com，电话是 18270262028"
        android:autoLink="email|phone"
        />
    <!--设置文字颜色、大小，并使用阴影-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试文字"
        android:shadowColor="#00f"
        android:shadowDx="10.0"
        android:shadowDy="8"
        android:shadowRadius="3"
        android:textSize="18pt"
        />
    <!--测试密码框-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可勾选文本"
        android:checkMark="@drawable/avatar"/>

</LinearLayout>
